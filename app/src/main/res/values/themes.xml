<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JUSTA" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryVariant">#7AC9EC</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightBlue</item>
        <item name="colorSecondaryVariant">@color/lightBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:itemTextAppearance">@style/ChangeTextStyle</item>
        <item name="android:itemBackground">@color/clearLightBlue</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/lightBlue</item>
        <item name="colorControlActivated">@color/lightBlue</item>
        <item name="android:textColor">@color/lightBlue</item>
    </style>

    <style name="Theme.JUSTA" parent="Base.Theme.JUSTA" />

    <style name="Theme.JUSTA.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JUSTA.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JUSTA.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="ChangeTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        
        <item name="fontFamily">@font/abraham</item>
        <item name="android:textSize">20dp</item>

    </style>
</resources>