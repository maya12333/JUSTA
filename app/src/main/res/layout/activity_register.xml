<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="ג'סטה"
            android:textColor="@color/lightBlue"
            android:textSize="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הרשמה"
            android:textSize="45dp"
            android:textColor="@color/black"
            android:fontFamily="@font/abraham"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_person"/>

        <EditText
            android:id="@+id/etUsernameR"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="-5dp"
            android:hint="שם משתמש"
            android:fontFamily="@font/alef"
            android:background="@drawable/custom_edittext"
            android:gravity="center"
            android:textColorHint="@color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_lock"/>

        <EditText
            android:id="@+id/etPasswordR"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="-5dp"
            android:hint="סיסמא"
            android:fontFamily="@font/alef"
            android:background="@drawable/custom_edittext"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:inputType="number"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_phone"/>

        <EditText
            android:id="@+id/etPhoneR"
            android:layout_marginTop="-5dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="טלפון"
            android:fontFamily="@font/alef"
            android:background="@drawable/custom_edittext"
            android:gravity="center"
            android:textColorHint="@color/black"
            android:inputType="number"/>

        <RadioGroup
            android:id="@+id/rgRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/rbNeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="צריך ג׳סטה"
                android:fontFamily="@font/alefbold"
                android:textSize="16dp"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbVolunteer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="תן ג׳סטה"
                android:fontFamily="@font/alefbold"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp"/>

        </RadioGroup>

        <Button
            android:id="@+id/btRegisterIn"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="הרשמה"
            android:fontFamily="@font/gan"
            android:textSize="20dp"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="להתחברות"
            android:fontFamily="@font/alef"
            android:textColor="@color/lightBlue"
            android:textStyle="bold"
            android:textSize="18dp"/>

    </LinearLayout>

</LinearLayout>