<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_design"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:gravity="right">

        <CheckBox
            android:id="@+id/cbConfirm"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="250dp"
            android:buttonTint="@color/black"/>

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:src="@drawable/ic_remove_black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_text_design"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:id="@+id/tvPhoneLvR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="12dp"
                    android:text="טלפון"
                    android:fontFamily="@font/abraham"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/tvDateLvR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="1dp"
                    android:fontFamily="@font/abraham"
                    android:text="תאריך"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTextLvR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:text="מלל הבקשה"
            android:fontFamily="@font/abraham"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvAddressLvR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/dela"
            android:text="כתובת"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="7dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp">

        <TextView
            android:id="@+id/tvUpdateLvR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/abraham"
            android:text="עדכון"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </LinearLayout>

</LinearLayout>