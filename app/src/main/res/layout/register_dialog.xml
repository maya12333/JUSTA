<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_design"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:gravity="center">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="אישור פרטי הרשמה"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/abraham"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_text_design"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="להירשם לפי הנתונים הבאים?"
            android:fontFamily="@font/alefbold"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tvNameR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="שם משתמש"
            android:fontFamily="@font/alefbold"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tvPasswordR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="סיסמא"
            android:fontFamily="@font/alefbold"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tvPhoneR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="מספר טלפון"
            android:fontFamily="@font/alefbold"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tvTypeR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="20dp"
            android:text=" נותן ג'סטה/צריך ג'סטה"
            android:fontFamily="@font/alefbold"
            android:textColor="@color/black"
            android:textSize="18dp"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btRNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="לא"
            android:textColor="@color/lightBlue"
            android:fontFamily="@font/gan"
            android:backgroundTint="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btRYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כן"
            android:textColor="@color/lightBlue"
            android:fontFamily="@font/gan"
            android:backgroundTint="@color/white"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>