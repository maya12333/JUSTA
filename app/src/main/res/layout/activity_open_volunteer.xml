<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Open_volunteer"
    android:orientation="vertical"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="ג'סטה"
            android:textColor="@color/lightBlue"
            android:textSize="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivImage"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"/>

        <TextView
            android:id="@+id/tvUsernameV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שם משתמש"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:fontFamily="@font/dela"/>

        <Button
            android:id="@+id/btViewRequests"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:text="צפייה בבקשות"
            android:textSize="32dp"
            android:fontFamily="@font/gan"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btProfile"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:text="פרופיל אישי"
            android:textSize="32dp"
            android:fontFamily="@font/gan"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btContact"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:text="יצירת   קשר"
            android:textSize="32dp"
            android:fontFamily="@font/gan"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>