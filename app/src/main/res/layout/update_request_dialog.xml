<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_design"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageButton
            android:id="@+id/ivExitReqU"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_close"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/lightBlue" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" עדכון בקשה"
        android:textSize="34dp"
        android:textColor="@color/white"
        android:fontFamily="@font/abraham"/>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_text_design"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <EditText
            android:id="@+id/etTextReqU"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:hint="מלל הבקשה"
            android:fontFamily="@font/alef"
            android:background="@drawable/custom_edittext"
            android:gravity="center"
            android:textColorHint="@color/black"/>

        <Button
            android:id="@+id/btDateU"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/clearLightBlue"
            android:layout_marginTop="20dp"
            android:text="תאריך"
            android:textSize="20dp"
            android:fontFamily="@font/alef"/>

        <ImageView
            android:id="@+id/ivLocationU"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_location"/>

        <TextView
            android:id="@+id/tvAddressU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="כתובת"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/alef"/>

    </LinearLayout>

    <Button
        android:id="@+id/btUpdateReq"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="עדכן"
        android:textColor="@color/lightBlue"
        android:fontFamily="@font/gan"
        android:backgroundTint="@color/white"
        android:textSize="30dp" />

</LinearLayout>